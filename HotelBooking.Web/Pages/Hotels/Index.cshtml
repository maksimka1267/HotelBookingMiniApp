@page
@model HotelBooking.Web.Pages.Hotels.IndexModel
@{
    ViewData["Title"] = "Готелі та пошук номерів";
}

<div class="mb-3">
    <h2 class="page-title mb-1">Пошук номерів</h2>
    <div class="page-subtitle">Оберіть місто та дати — і забронюйте доступний номер.</div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger shadow-soft" role="alert">
        <b>Помилка:</b> @Model.Error
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success shadow-soft" role="alert">
        @Model.Success
    </div>
}

<div class="card shadow-soft p-3 p-md-4 mb-4">
    <form method="post" class="row g-3 align-items-end">
        <input type="hidden" name="handler" value="search" />

        <div class="col-12 col-md-4">
            <label class="form-label">Місто</label>
            <input class="form-control" asp-for="City" placeholder="Напр. Київ (можна залишити порожнім)" />
        </div>

        <div class="col-6 col-md-3">
            <label class="form-label">Заїзд</label>
            <input class="form-control" asp-for="CheckIn" type="date" />
        </div>

        <div class="col-6 col-md-3">
            <label class="form-label">Виїзд</label>
            <input class="form-control" asp-for="CheckOut" type="date" />
        </div>

        <div class="col-6 col-md-1">
            <label class="form-label">Місць</label>
            <input class="form-control" asp-for="MinCapacity" type="number" min="1" />
        </div>

        <div class="col-6 col-md-1 d-grid">
            <button class="btn btn-dark" type="submit">Пошук</button>
        </div>
    </form>
</div>

@if (Model.Results.Count == 0)
{
    <div class="text-muted">Немає результатів. Спробуйте змінити параметри пошуку.</div>
}
else
{
    <div class="row g-3">
        @foreach (var r in Model.Results)
        {
            <div class="col-12 col-md-6">
                <div class="card shadow-soft p-3 h-100">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">@r.HotelName</div>
                            <div class="text-muted small">@r.City</div>
                        </div>
                        <span class="badge text-bg-dark">@r.PricePerNight.ToString("0.##") ₴/ніч</span>
                    </div>

                    <div class="mt-2 small text-muted">
                        Місткість: <b>@r.Capacity</b>
                    </div>

                    <form method="post" class="mt-3">
                        <input type="hidden" name="handler" value="book" />
                        <input type="hidden" name="RoomId" value="@r.Id" />
                        <input type="hidden" name="City" value="@Model.City" />
                        <input type="hidden" name="CheckIn" value="@Model.CheckIn.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="CheckOut" value="@Model.CheckOut.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="MinCapacity" value="@Model.MinCapacity" />

                        <button type="submit" class="btn btn-outline-dark w-100">
                            Забронювати
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}
