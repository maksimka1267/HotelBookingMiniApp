@page "{id?}"
@model HotelBooking.Web.Pages.Admin.Rooms.UpsertModel
@{
    ViewData["Title"] = Model.IsEdit ? "Адмін · Редагувати номер" : "Адмін · Додати номер";
}

<div class="mb-3">
    <h2 class="page-title mb-1">@ViewData["Title"]</h2>
    <div class="page-subtitle">
        @(Model.IsEdit ? "Оновіть параметри номера." : "Створіть новий номер для готелю.")
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger shadow-soft" role="alert">
        <b>Помилка:</b> @Model.Error
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success shadow-soft" role="alert">
        @Model.Success
    </div>
}

<div class="card shadow-soft p-3 p-md-4">
    <form method="post">
        <input type="hidden" name="handler" value="save" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Готель</label>
            <select class="form-select" asp-for="HotelId" required>
                <option value="">Оберіть готель...</option>
                @foreach (var h in Model.Hotels)
                {
                    <option value="@h.Id">@h.Name (@h.City)</option>
                }
            </select>
            <span class="text-danger small" asp-validation-for="HotelId"></span>
        </div>

        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label class="form-label">Місткість (кількість місць)</label>
                <input class="form-control" asp-for="Capacity" type="number" min="1" required />
                <span class="text-danger small" asp-validation-for="Capacity"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">Ціна за ніч (₴)</label>
                <input class="form-control" asp-for="PricePerNight" type="number" step="0.01" min="0" required />
                <span class="text-danger small" asp-validation-for="PricePerNight"></span>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-dark">
                @(Model.IsEdit ? "Зберегти" : "Створити")
            </button>
            <a class="btn btn-outline-dark" asp-page="/Admin/Rooms/Index">Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
