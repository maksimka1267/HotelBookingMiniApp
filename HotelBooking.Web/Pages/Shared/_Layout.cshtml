@using System.Security.Claims
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelBooking</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-page="/Hotels/Index">
                    <span class="brand-dot"></span> HotelBooking
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Hotels/Index">Готелі</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Bookings/My">Мої бронювання</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Адмін
                                    </a>
                                    <ul class="dropdown-menu shadow-sm">
                                        <li><a class="dropdown-item" asp-page="/Admin/Hotels/Index">Готелі (CRUD)</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Rooms/Index">Номери (CRUD)</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Bookings/Index">Бронювання</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Stats/Index">Статистика</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="text-muted small d-none d-md-inline">
                                @User.FindFirstValue(ClaimTypes.Email)
                            </span>

                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge rounded-pill text-bg-dark">Admin</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill text-bg-secondary">Client</span>
                            }

                            <!-- Logout: POST handler на странице /Account/Login -->
                            <form method="post" asp-page="/Account/Login" class="m-0">
                                <input type="hidden" name="handler" value="logout" />
                                <button type="submit" class="btn btn-outline-dark btn-sm">Вийти</button>
                            </form>

                        }
                        else
                        {
                            <a class="btn btn-dark btn-sm" asp-page="/Account/Login">Увійти</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="text-muted small">© @DateTime.Now.Year · HotelBooking</div>
            <div class="text-muted small">Razor Pages · Мінімалістичний UI</div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
